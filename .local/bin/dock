#!/usr/bin/env bash
set -euo pipefail

xran="$(xrandr -q)"
dp21="$(echo "$xran" | grep -- 'DP2-1 connected')"
dp23="$(echo "$xran" | grep -- 'DP2-3 connected')"
if [[ -z $dp21 || -z $dp23 ]] ; then
    echo "Kann die Bildschirme nicht finden..."
    echo "Das Dock scheint nicht korrekt verbunden zu sein!"
    exit 1
fi
bspc wm -r
