#!/usr/bin/env bash
set -euo pipefail

while pgrep -u $UID -x polybar > /dev/null; do
    killall -q polybar
    sleep 1
done

BARNAME=mybar
if [[ -f /etc/hostname ]] && grep -q 'ArchX1' /etc/hostname ; then
    BARNAME=archx1
elif [[ -f /etc/conf.d/hostname ]] && grep -q 'ArchX1' /etc/conf.d/hostname ; then
    BARNAME=archx1
fi

zsh -c "polybar $BARNAME -c $HOME/.config/polybar/config.ini > $HOME/.cache/polybar.log 2>&1 &!"
echo "Bars launched..."
