#!/usr/bin/env bash
set -euo pipefail

xrandr --output DVI-D-0 --off \
       --output HDMI-0 --mode 2560x1440 --pos 0x0 --rotate normal \
       --output DP-0 --off \
       --output DP-1 --off \
       --output DP-2 --mode 2560x1440 --pos 2560x0 --rotate normal \
       --output DP-3 --off \
       --output DP-4 --off \
       --output DP-5 --off

bspc desktop "0" -m "DP-2"
bspc desktop "1" -m "DP-2"
bspc desktop "Desktop" -r
bspc wm -O 'DP-2' 'HDMI-0'
fehbg > /dev/null &
