#!/usr/bin/env bash
set -euo pipefail

if [[ $EUID -ne 0 ]] ; then
    echo "Please run as root"
    exit 1
fi

emaint sync -r gentoo <<< "yes"
emaint sync -r guru
emaint sync -r daniels-overlay
emerge -u1 portage
emerge -avuDN @world
emerge -ac --verbose=n
emerge -avt @preserved-rebuild
dispatch-conf
eclean-dist -d
eix-update
