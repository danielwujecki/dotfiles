#!/usr/bin/env bash
set -euo pipefail

if [[ $EUID -ne 0 ]] ; then
    echo "Please run as root"
    exit 1
fi

emaint sync -r gentoo
emaint sync -r guru
emaint sync -r custom-ebuilds
emerge -u1 portage
emerge -avuDN @world
emerge -avt @preserved-rebuild
eclean-dist -d
emerge -ac --verbose=n
dispatch-conf
eix-update
