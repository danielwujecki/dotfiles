#!/usr/bin/env bash
set -euo pipefail

if [[ $EUID -ne 0 ]] ; then
    echo "Please run as root"
    exit 1
fi

emaint sync -yr gentoo          || exit 1
emaint sync -yr guru            || exit 1
emaint sync -yr custom-ebuilds  || exit 1
emerge -u1 portage              || exit 1
emerge -avutDN @world           || exit 1
emerge -avt @preserved-rebuild  || exit 1
eclean-dist -d                  || exit 1
emerge -ac --verbose=n          || exit 1
eix-update                      || exit 1
