#!/usr/bin/env bash
set -euo pipefail

xrandr --output eDP-1 --primary --mode 2560x1440 --pos 0x0 --rotate normal \
    --output DP-1 --off \
    --output DP-2 --off \
    --output DP-2-1 --off \
    --output DP-2-2 --off \
    --output DP-2-3 --off \
    --output HDMI-1 --off \
    --output VIRTUAL-1 --off

