ramp-capacity-4 = %{T3} %{T-}
ramp-capacity-5 = %{T3} %{T-}
ramp-capacity-6 = %{T3} %{T-}
ramp-capacity-7 = %{T3}%{F#A3BE8C} %{F-}%{T-}
ramp-capacity-8 = %{T3}%{F#A3BE8C} %{F-}%{T-}
