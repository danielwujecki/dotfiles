[module/launcher]
type=custom/text
content = 
content-font = 2
content-margin = 1
content-foreground = ${colors.arch}
click-left = "bash -c 'rofi -show drun'"

[module/readupdates]
type=custom/script

exec = cat $HOME/.config/polybar/current_updates.txt
tail = false
interval = 30
format = <label>
label = %output%

[module/sep]
type = custom/text
content = |

[module/bspwm]
type = internal/bspwm

enable-click = true
enable-scroll = false
pin-workspaces = false

format = <label-state>

label-focused = %name%
label-focused-foreground = ${colors.foreground-alt}
label-focused-background = ${colors.background-alt}
label-focused-underline= ${colors.yellow}
label-focused-padding = 1
label-dimmed-focused-underline = ${colors.background-alt}

label-occupied = %name%
label-occupied-padding = 1

label-urgent = %name%
label-urgent-background = ${colors.alert}
label-urgent-padding = 1

label-empty =
label-empty-padding = 1

[module/xwindow]
type = internal/xwindow
label = %title:0:70:...%

###############################################################################
############                       MODULES RIGHT                   ############
###############################################################################


[module/cpu]
type = internal/cpu
interval = 1

label = %{T3}﬙ %{T-}%percentage:2%%
label-padding-right = 1
label-foreground = ${colors.blue}

[module/memory]
type = internal/memory
interval = 2
label = %{T3} %{T-}%percentage_used%%
label-foreground = ${colors.purple}

[module/audio]
type = internal/pulseaudio

use-ui-max = false
; Interval for volume increase/decrease
interval = 5

format-volume = <ramp-volume><label-volume>

label-volume = %percentage%%
label-volume-padding-right = 1
label-volume-foreground = ${colors.yellow}

label-muted = %{T3} %{T-}
label-muted-padding-right = 0
label-muted-foreground = ${colors.alert}

ramp-volume-0 = %{T3} %{T-}
ramp-volume-1 = %{T3} %{T-}
ramp-volume-2 = %{T3} %{T-}
ramp-volume-foreground = ${colors.yellow}

[module/backlight]
type = internal/xbacklight
enable-scroll = false

format = <ramp><label>

label = %percentage%%
label-foreground = ${colors.blue}
label-padding-right = 1
ramp-0 = %{T3} %{T-}
ramp-1 = %{T3} %{T-}
ramp-2 = %{T3} %{T-}
ramp-foreground = ${colors.blue}

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 99

format-charging = <animation-charging><label-charging>
label-charging = %percentage%%
label-charging-foreground = ${colors.green}
label-charging-padding-right = 1

format-discharging = <ramp-capacity><label-discharging>
label-discharging = %percentage%%
label-discharging-padding-right = 1

format-full = <label-full>
label-full = %{T3} %{T-}%percentage%%
label-full-foreground = ${colors.green}
label-full-padding-right = 1

ramp-capacity-0 = %{T3}%{F#ED404C} %{F-}%{T-}
ramp-capacity-1 = %{T3}%{F#ED404C} %{F-}%{T-}
ramp-capacity-2 = %{T3}%{F#ED404C} %{F-}%{T-}
ramp-capacity-3 = %{T3} %{T-}
ramp-capacity-4 = %{T3} %{T-}
ramp-capacity-5 = %{T3} %{T-}
ramp-capacity-6 = %{T3} %{T-}
ramp-capacity-7 = %{T3}%{F#93DE6C} %{F-}%{T-}
ramp-capacity-8 = %{T3}%{F#93DE6C} %{F-}%{T-}
ramp-capacity-9 = %{T3}%{F#93DE6C} %{F-}%{T-}

animation-charging-0 = %{T3} %{T-}
animation-charging-1 = %{T3} %{T-}
animation-charging-2 = %{T3} %{T-}
animation-charging-3 = %{T3} %{T-}
animation-charging-4 = %{T3} %{T-}
animation-charging-5 = %{T3} %{T-}
animation-charging-6 = %{T3} %{T-}
animation-charging-framerate = 750
animation-charging-foreground = ${colors.foreground-alt}

[module/date]
type = internal/date
interval = 1

time = %{F#d07ef2}%{T3} %{T-}%H:%M%{F-}
date = %{F#65a2d9}%{T3} %{T-}%a, %d. %b%{F-}

label = %time%  %date%

