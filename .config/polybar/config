primary = #ffb52a

[bar/mybar]
monitor = eDP1
monitor-fallback = DP2-2
monitor-strict = false
monitor-exact = true

override-redirect = false
;wm-restack = bspwm

bottom = false
fixed-center = true
width = 100%
height = 30
offset-x = 0
offset-y = 0

