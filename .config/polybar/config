[colors]
background = #1c1c1c
background-alt = #3c3c3c

foreground = #eaeaea
foreground-alt = #ed404c

alert = ${self.foreground-alt}
arch = #1793d1
yellow = #e5c246
blue = #65a2d9
purple = #d07ef2
green = #93de6c

[bar/mybar]
monitor = eDP1
monitor-fallback = DP2-3
monitor-strict = false
monitor-exact = true

override-redirect = false
wm-restack = bspwm

bottom = false
fixed-center = true
width = 100%
height = 34
offset-x = 0
offset-y = 0

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00
border-size = 0
border-color = #00000000

radius = 0.0
padding-left = 1
padding-right = 1
module-margin = 0
module-margin-left = 0
module-margin-right = 1

; standard
font-0 = "JetBrains Mono:size=11;3"
; Arch Logo launcher
font-1 = "JetBrainsMono Nerd Font:size=16;3"
; icons
font-2 = "JetBrainsMono Nerd Font:size=14;4"

locale = de_DE.UTF-8

modules-left = launcher readupdates sep bspwm xwindow
modules-right = cpu memory sep audio backlight battery date sep
; modules-center = spotify

tray-position = right
tray-detached = false
tray-maxsize = 26
tray-padding = 1
tray-scale = 1.0

dpi-x = 96
dpi-y = 96
enable-ipc = false

cursor-click = pointer
cursor-scroll = ns-resize

