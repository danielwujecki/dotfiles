configuration {
	modi: "drun,window,run";
	show-icons: true;
	terminal: "termite";
    display-drun: "Apps:";
    display-window: "Running:";
    display-run: "run:";
}

* {
    lines: 15;
    columns: 1;
    width: 1000;
    background-color: #282828;
    border-color: #1f2430;
    text-color: #ebdbb2;
    font: "JetBrains Mono 11";
    scrollbar: false;
}

#mainbox {
    spacing: 20px;
    padding: 10px;
    border: 2px;
    border-color: @base0D;
}

#listview {
    spacing: 5px;
}

#element {
    border: 0;
    padding: 4px;
    border-radius: 4px;
}

#element selected {
    background-color: #665c54;
    text-color: #fbf1c7;
}

#inputbar {
    spacing:    10px;
    padding:    1px ;
}
