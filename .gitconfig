[init]
    defaultBranch = main
[push]
    default = simple
[pull]
    rebase = true
[core]
    editor = nvim
[alias]
    co  = checkout
    sw  = switch
    st  = status
    ci  = commit -m
    sub = submodule update --init --recursive
    br  = branch -avv
[pager]
    branch = false
#[difftool]
#	prompt = False
[diff]
    tool = default-difftool
[difftool "default-difftool"]
    cmd = code --wait --diff $LOCAL $REMOTE
[merge]
  tool = code
[mergetool "code"]
  cmd = code --wait --merge $REMOTE $LOCAL $BASE $MERGED
