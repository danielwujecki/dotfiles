#
# directory structure
#
dir     /dev        755 0 0
dir     /etc        755 0 0
dir     /etc/lvm    755 0 0
dir     /mnt        755 0 0
dir     /proc       755 0 0
dir     /run        755 0 0
dir     /sys        755 0 0
dir     /tmp        755 0 0
dir     /usr        755 0 0
dir     /usr/bin    755 0 0
dir     /usr/lib    755 0 0

#
# symlinks
#
slink /bin       /usr/bin  755 0 0
slink /sbin      /usr/bin  755 0 0
slink /usr/sbin  /usr/sbin 755 0 0
slink /lib       /usr/lib  755 0 0
slink /lib64     /usr/lib  755 0 0
slink /usr/lib64 /usr/lib  755 0 0

#
# nodes
#
nod /dev/console 600 0 0 c 5 1
nod /dev/tty     666 0 0 c 5 0
nod /dev/null    666 0 0 c 1 3
nod /dev/urandom 666 0 0 c 1 9
nod /dev/random  666 0 0 c 1 8

